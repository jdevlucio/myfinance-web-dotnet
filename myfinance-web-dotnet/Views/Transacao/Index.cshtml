@{
    ViewData["Title"] = "Transação";
}

<button type="button" class="btn btn-block btn-primary" onclick="Novo()">Registrar transação</button>
<br><br>

<table class="table table-bordered">
    <tr>
        <th>Id</th>
        <th>Histórico</th>
        <th>Tipo</th>
        <th>Data</th>
        <th>Valor</th>
        <th>#</th>
        <th>#</th>
    </tr>


    @{
            foreach ( var item in (List<TransacaoModel>)ViewBag.ListaTransacao)
            {
                 <tr>
                   <th>@item.Id</th>
                   <th>@item.Historico</th>
                   <th>@item.ItemPlanoConta.Tipo</th>
                   <th>@item.Data</th>
                   <th>@item.Valor</th>
                   <td><button type ="button" class="btn btn-block btn-outline-warning" onclick="Atualizar(@item.Id.ToString())">Editar</button></td>
                   <td><button type ="button" class="btn btn-block btn-outline-danger" onclick="Excluir(@item.Id.ToString())">Excluir</button></td>
                 </tr>
            }

    }
</table>

<script>

   function Novo(){
      window.location.href = "../Transacao/Cadastro"
   }

   function Atualizar(id){
      window.location.href = "../Transacao/Cadastro/" + id ;
   }

   function Excluir(id){
     window.location.href = "../Transacao/Excluir/" + id ;
   }

</script>
